<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="5dp">

    <TextView
        android:id="@+id/spinner_country_name"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_location"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:background="@drawable/border_accent"
        android:text="INDIA"
        android:gravity="center"
        android:textSize="15sp"
        android:maxLength="3"
        android:textStyle="bold"
        android:textColor="@color/brighdark"/>

    <TextView
        android:id="@+id/spinner_country_fullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INDIA"
        android:textColor="@color/brighdark"
        android:textSize="14sp"
        android:layout_gravity="center_vertical"
        android:layout_toEndOf="@id/spinner_country_name"
        android:layout_marginStart="10dp"
        android:layout_alignTop="@id/spinner_country_name"
        />



    <TextView
        android:id="@+id/spinner_country_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+91"
        android:textSize="14sp"
        android:layout_marginStart="10dp"
        android:textColor="@color/brighdark"
        android:layout_gravity="center_vertical"
        android:layout_below="@id/spinner_country_fullname"
        android:layout_toEndOf="@id/spinner_country_name"

        />


</RelativeLayout>