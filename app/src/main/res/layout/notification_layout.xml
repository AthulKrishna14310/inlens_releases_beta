<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/notificationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="Tap to view InLens Gallery and \n add images to upload to Cloud"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/leftButtonNotification"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@id/uploadNotificationButton"
            android:background="@color/white"
            android:foreground="@drawable/notification_right"
            android:rotation="180"
            android:visibility="gone" />

        <Button
            android:id="@+id/uploadNotificationButton"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/rightNotificationArrow"
            android:background="@color/white"
            android:foreground="@drawable/ic_upload_notification"
            android:visibility="gone" />

        <Button
            android:id="@+id/rightNotificationArrow"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:background="@color/white"
            android:elevation="0dp"
            android:foreground="@drawable/notification_right"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/UploadImageViewNotification"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="false"
            android:layout_centerHorizontal="false"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:background="@color/white"
            android:foreground="@drawable/inlens_logo_m"
            android:scaleType="centerInside"
            android:visibility="visible" />
    </RelativeLayout>
</RelativeLayout>